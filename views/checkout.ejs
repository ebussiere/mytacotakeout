<!DOCTYPE html>
<html lang="en">

<head>
  <title>Checkout</title>
  <%- include('partials/_head') %>
</head>

<body>
  <%- include('partials/_header') %>
  <div class="page-container">
    <div class="content-wrap" id="checkout-center">
      <div id="cart-checkout">
        <div class="cart">

          <div class="top-cart">
            <h3>Order #<%=order_id%></h3>
            <% for(const currentCartItem in currentCartItems) { %>
            <div class="cart-admin">
              <div class="item-price">
                <h3><%=currentCartItems[currentCartItem]["count"]%>x</h3>
                <h3><%=currentCartItems[currentCartItem]["name"]%></h3>
                <h3><%=currentCartItems[currentCartItem]["total"]%></h3>
              </div>

            </div>
            <% }%>
          </div>
          <form class="form-inline" method="POST" action="/checkout/orderID">
            <input type="hidden" name="order_id" value="<%=order_id%>">
            <button type="submit" style="width: 100%; height: 60; cursor: pointer;" id="sms-button" class="checkout-btn"><span class="order-btn">Confirm Order</span><span class="total-price"><%=cartTotal%></button>
          </form>
          <!-- <a href="/order-sent" id="sms-button" class="checkout-btn"><span class="order-btn">Confirm Order</span><span class="total-price"><%=cartTotal%></span></a> -->
        </div>
      </div>
    </div>
    <div id="checkout-footer">
      <%- include('partials/_footer') %>
    </div>
  </div>

</body>

</html>
